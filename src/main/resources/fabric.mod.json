{
  "schemaVersion": 1,
  "id": "minershorizon",
  "version": "${version}",

  "name": "Miner's Horizon",
  "description": "When you look out into the sky after a day of mining... the horizon looks back. A modern mining dimension mod for Fabric!",
  "authors": [
    "Draylar"
  ],

  "license": "MIT",
  "icon": "assets/minershorizon/icon.png",

  "environment": "*",
  "entrypoints": {
    "main": [
      "draylar.horizon.MinersHorizon"
    ],
    "client": [
      "draylar.horizon.MinersHorizonClient"
    ]
  },

  "mixins": [
    "minershorizon.mixins.json"
  ],

  "requires": {
    "fabricloader": ">=0.4.0",
    "fabric": "*"
  },

  "accessWidener": "minershorizon.accesswidener"
}